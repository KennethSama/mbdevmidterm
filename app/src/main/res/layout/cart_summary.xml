<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A737373">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/moda_summary"
        android:padding="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_goBack"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_true"
            android:backgroundTint="#737373"
            android:drawablePadding="2dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Go Back"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_confirm"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_confirm"
            app:layout_constraintTop_toBottomOf="@+id/text_or"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="OR"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+id/button_confirm"
            app:layout_constraintStart_toStartOf="@+id/button_confirm"
            app:layout_constraintTop_toBottomOf="@+id/button_confirm" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_confirm"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_true"
            android:drawablePadding="2dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayoutSummary" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Cart Summary"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayoutSummary"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="5dp"
            app:columnCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:rowCount="3">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_columnWeight="2"
                app:rowCount="1">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Balance:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_summaryBalanceValue"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Value"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:columnCount="1"
                app:layout_columnWeight="1"
                app:rowCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Summary:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:padding="5dp"
                    app:layout_columnWeight="2"
                    app:rowCount="1">

                    <TextView
                        android:id="@+id/textView_productNameValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Balance:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_neededValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="X"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_priceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="P1.00"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/textView_totalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="P1.00"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />
                </androidx.gridlayout.widget.GridLayout>

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_columnWeight="2"
                app:rowCount="1">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Total Price:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_summaryTotalPriceValue"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Value"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_columnWeight="2"
                app:rowCount="1">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Change:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/textView_summaryChangeValue"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Value"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </androidx.gridlayout.widget.GridLayout>


        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>